datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum AccountType {
  CHECKING
  CREDIT_CARD
  SAVINGS
  INVESTMENT
}

enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Account {
  id              String      @id @default(cuid())
  name            String
  type            AccountType
  color           String?
  icon            String?
  sortOrder       Int         @default(0)
  linkedAccountId String?
  linkedAccount   Account?    @relation("AmexLink", fields: [linkedAccountId], references: [id])
  linkedCards     Account[]   @relation("AmexLink")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  buckets            Bucket[]
  transactions       Transaction[] @relation("TransactionSource")
  incomingTransfers  Transaction[] @relation("TransactionDestination")

  @@map("accounts")
}

model Bucket {
  id           String        @id @default(cuid())
  name         String
  accountId    String
  account      Account       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  color        String?
  goal         Decimal?      @db.Decimal(12, 2)
  baseAmount   Decimal       @default(0) @db.Decimal(12, 2)
  sortOrder    Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@index([accountId])
  @@map("buckets")
}

model Category {
  id            String        @id @default(cuid())
  name          String        @unique
  color         String?
  icon          String?
  sortOrder     Int           @default(0)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  subCategories SubCategory[]
  transactions  Transaction[]
  budgets       Budget[]

  @@map("categories")
}

model SubCategory {
  id           String        @id @default(cuid())
  name         String
  categoryId   String
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  sortOrder    Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@unique([categoryId, name])
  @@map("sub_categories")
}

model Transaction {
  id            String            @id @default(cuid())
  label         String
  amount        Decimal           @db.Decimal(12, 2)
  date          DateTime?         @db.Date
  month         Int
  year          Int
  status        TransactionStatus @default(PENDING)
  note          String?
  accountId             String
  account               Account           @relation("TransactionSource", fields: [accountId], references: [id])
  destinationAccountId  String?
  destinationAccount    Account?          @relation("TransactionDestination", fields: [destinationAccountId], references: [id])
  categoryId    String
  category      Category          @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  subCategoryId String?
  subCategory   SubCategory?      @relation(fields: [subCategoryId], references: [id], onDelete: SetNull)
  bucketId      String?
  bucket        Bucket?           @relation(fields: [bucketId], references: [id], onDelete: SetNull)
  isAmex        Boolean           @default(false)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([accountId, date])
  @@index([categoryId])
  @@index([date])
  @@index([status])
  @@index([year, month])
  @@index([isAmex, status])
  @@index([destinationAccountId])
  @@map("transactions")
}

model Budget {
  id         String   @id @default(cuid())
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  month      Int
  year       Int
  amount     Decimal  @db.Decimal(12, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([categoryId, year, month])
  @@index([year, month])
  @@map("budgets")
}

model MonthlyBalance {
  id        String   @id @default(cuid())
  year      Int
  month     Int
  forecast  Decimal  @db.Decimal(12, 2)
  committed Decimal  @db.Decimal(12, 2)
  surplus   Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([year, month])
  @@index([year, month])
  @@map("monthly_balances")
}
